# ============================================
# Banco de Dados - PostgreSQL
# ============================================
POSTGRES_DB=ln_educacional
POSTGRES_USER=postgres
POSTGRES_PASSWORD=TROCAR_SENHA_SEGURA
POSTGRES_PORT=5432
DATABASE_URL=postgresql://postgres:TROCAR_SENHA_SEGURA@postgres:5432/ln_educacional?schema=public

# ============================================
# Redis
# ============================================
REDIS_URL=redis://redis:6379
REDIS_PORT=6379

# ============================================
# Server (API Fastify)
# ============================================
NODE_ENV=production
PORT=3333
SERVER_PORT=3333
HOST=0.0.0.0

# ============================================
# Autenticacao JWT
# ============================================
JWT_SECRET=TROCAR_POR_STRING_ALEATORIA_LONGA_64_CHARS
JWT_REFRESH_SECRET=TROCAR_POR_OUTRA_STRING_ALEATORIA_LONGA_64_CHARS
COOKIE_SECRET=TROCAR_POR_OUTRA_STRING_ALEATORIA_LONGA_64_CHARS

# ============================================
# CORS - Origens permitidas (separar por virgula)
# ============================================
CORS_ORIGIN=https://lneducacional.com.br,https://www.lneducacional.com.br

# ============================================
# Client (Frontend React)
# ============================================
CLIENT_PORT=3000
VITE_API_URL=https://api.lneducacional.com.br

# ============================================
# Email
# ============================================
EMAIL_PROVIDER=console
EMAIL_API_KEY=
EMAIL_FROM=noreply@lneducacional.com.br
EMAIL_FROM_NAME=LN Educacional
EMAIL_REPLY_TO=contato@lneducacional.com.br
ADMIN_EMAIL=admin@lneducacional.com.br

# ============================================
# Dominio (usado pelo Nginx/Certbot)
# ============================================
DOMAIN=lneducacional.com.br

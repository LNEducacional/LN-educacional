# Database
DATABASE_URL=postgresql://lnuser:password@localhost:5432/lneducacional?schema=public

# Redis
REDIS_URL=redis://:password@localhost:6379

# Server
NODE_ENV=development
PORT=3333
HOST=0.0.0.0

# Security
JWT_SECRET=your-jwt-secret-here
COOKIE_SECRET=your-cookie-secret-here
SESSION_SECRET=your-session-secret-here

# Frontend
FRONTEND_URL=http://localhost:5173

# Email Configuration
EMAIL_PROVIDER=console
EMAIL_API_KEY=your-email-api-key-here
EMAIL_FROM=noreply@lneducacional.com.br
EMAIL_FROM_NAME=LN Educacional
EMAIL_REPLY_TO=contato@lneducacional.com.br

# Email Providers (choose one):
# - console: Log emails to console (development)
# - sendgrid: SendGrid service
# - resend: Resend service
# - nodemailer: Custom SMTP

# SendGrid Configuration (if using sendgrid)
# EMAIL_PROVIDER=sendgrid
# EMAIL_API_KEY=your-sendgrid-api-key

# Resend Configuration (if using resend)
# EMAIL_PROVIDER=resend
# EMAIL_API_KEY=your-resend-api-key

# Nodemailer SMTP Configuration (if using nodemailer)
# EMAIL_PROVIDER=nodemailer
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# Admin Email Configuration
ADMIN_EMAIL=admin@lneducacional.com

# Security Configuration
RECAPTCHA_SECRET=your-recaptcha-secret-key
RATE_LIMIT_MAX=5
RATE_LIMIT_WINDOW=900000

# Webhook Notifications
DISCORD_WEBHOOK=https://discord.com/api/webhooks/your-webhook-id/your-webhook-token
SLACK_WEBHOOK=https://hooks.slack.com/services/your/slack/webhook

# Anti-Spam Configuration
ENABLE_HONEYPOT=true
SPAM_DETECTION=true
BLACKLIST_ENABLED=true

# Auto-Reply Configuration
AUTO_REPLY_ENABLED=true
AUTO_REPLY_DELAY=0

# Contact Form Configuration
CONTACT_RATE_LIMIT=true
CONTACT_CAPTCHA_REQUIRED=true
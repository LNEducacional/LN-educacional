# Production Environment Variables
NODE_ENV=production
PORT=3333
HOST=0.0.0.0

# Database
DATABASE_URL=postgresql://lnuser:${DB_PASSWORD}@${DB_HOST}:5432/lneducacional?schema=public&sslmode=require

# Security
JWT_SECRET=${JWT_SECRET}
COOKIE_SECRET=${COOKIE_SECRET}
SESSION_SECRET=${SESSION_SECRET}

# CORS
CORS_ORIGIN=https://lneducacional.com.br,https://www.lneducacional.com.br

# Payment Gateway (Production)
PAYMENT_GATEWAY_URL=https://api.payment-provider.com
PAYMENT_API_KEY=${PAYMENT_API_KEY}
PAYMENT_SECRET_KEY=${PAYMENT_SECRET_KEY}
PAYMENT_WEBHOOK_SECRET=${PAYMENT_WEBHOOK_SECRET}

# Email Service (Production)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=${EMAIL_USER}
EMAIL_PASS=${EMAIL_PASS}
EMAIL_FROM="LN Educacional <noreply@lneducacional.com.br>"

# Storage
STORAGE_TYPE=s3
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=${AWS_ACCESS_KEY_ID}
AWS_SECRET_ACCESS_KEY=${AWS_SECRET_ACCESS_KEY}
AWS_S3_BUCKET=${AWS_S3_BUCKET}

# Redis (for production caching)
REDIS_URL=redis://${REDIS_HOST}:6379
REDIS_PASSWORD=${REDIS_PASSWORD}

# Monitoring
SENTRY_DSN=${SENTRY_DSN}
NEW_RELIC_LICENSE_KEY=${NEW_RELIC_LICENSE_KEY}

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# API Keys
GOOGLE_ANALYTICS_ID=${GA_ID}
RECAPTCHA_SECRET_KEY=${RECAPTCHA_SECRET}

# CDN
CDN_URL=https://cdn.lneducacional.com.br

# Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30